# Application
APP_NAME=Bio-RAG
APP_VERSION=1.0.0
DEBUG=false

# API
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/biorag

# Redis
REDIS_URL=redis://localhost:6379/0

# Vector Database
CHROMA_PERSIST_DIR=./chroma_db
EMBEDDING_MODEL=microsoft/BiomedNLP-PubMedBERT-base-uncased-abstract
EMBEDDING_DIMENSION=768

# External APIs
PUBMED_API_KEY=your_pubmed_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# LLM Settings
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000

# Authentication
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_SEARCH=60/minute
RATE_LIMIT_RAG=20/minute
RATE_LIMIT_GENERAL=100/minute

# Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Search
DEFAULT_SEARCH_LIMIT=10
MAX_SEARCH_LIMIT=100
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-12-v2

# Cache TTL (seconds)
CACHE_TTL_SEARCH=3600
CACHE_TTL_RAG=86400
CACHE_TTL_EMBEDDING=604800
